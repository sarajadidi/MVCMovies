@model IEnumerable<Movie>

<h2>Movies</h2>

<div style="display: block">
    <a href="/Movie/AddMovie/">Create a New Movie</a>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Lead Actor</th>
        <th>Genre</th>
        <th>Year</th>
        <th>Rating</th>
        <th>Rotten Tomatoes Rating</th>
        <th>Description</th>
    </tr>

    @foreach (var movie in @Model)
    {
        <tr>
            <td><a href=/Movie/ViewMovie/@movie.MovieID>@movie.MovieID</a></td>
            <td>@movie.Name</td>
            <td>@movie.LeadActor</td>
            <td>@movie.Genre</td>
            <td>@movie.Year</td>
            <td>@movie.Rating</td>
            <td>@movie.RottenRating</td>
            <td>@movie.Description</td>
        </tr>
    }

</table>